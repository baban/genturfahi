<Window x:Class="genturfahi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" MinHeight="350" MinWidth="350">
    <Grid>
        <Button Content="パース" Margin="10,5,8,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Grid Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="199*"/>
                <ColumnDefinition Width="318*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*" MinHeight="100" />
                <RowDefinition Height="Auto" MinHeight="5" />
                <RowDefinition Height="100*" MinHeight="10" />
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" Margin="10" TextWrapping="Wrap" Text="{Binding LojibanContent}" Grid.ColumnSpan="2" SpellCheck.IsEnabled="True"/>
            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" />
            <TextBox Grid.Row="2" Margin="10" TextWrapping="Wrap" Grid.ColumnSpan="2" Text="{Binding ParseResult}"/>
        </Grid>
    </Grid>
</Window>
