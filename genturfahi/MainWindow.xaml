<Window x:Class="genturfahi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="genturfa'i" Height="350" Width="525" MinHeight="350" MinWidth="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="パース" Margin="10,5,8,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Grid Margin="0,25,0,0"  PreviewKeyDown="OnKeyDownHandler">
            <Grid.RowDefinitions>
                <RowDefinition Height="144"  MinHeight="144" />
                <RowDefinition Height="Auto" MinHeight="5" />
                <RowDefinition MinHeight="10" />
            </Grid.RowDefinitions>
            <TextBlock  HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="解析結果:" VerticalAlignment="Top"/>
            <TextBox Name="lojibanText" Grid.Row="0" Margin="10,29,10,10" TextWrapping="Wrap" Text="{Binding LojibanContent}" Grid.ColumnSpan="2" SpellCheck.IsEnabled="True" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Visible" IsManipulationEnabled="True"  />
            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" />
            <TextBlock Grid.Row="0"  HorizontalAlignment="Left" Margin="10,8,0,120" TextWrapping="Wrap" Text="文章:"/>
            <TextBox Name="parseResultField" Grid.Row="2" Margin="10,31,10,10" TextWrapping="Wrap" Grid.ColumnSpan="2" Text="{Binding ParseResult}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" />
        </Grid>
    </Grid>
</Window>
